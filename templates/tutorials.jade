extends layout

block content
    
    ul.nav-portfolio
        li
          a.filter(data-filter='all')
            | All
            ins &nbsp;
        li
          a.filter(data-filter='.module')
            | Basic
            ins &nbsp;
        li
          a.filter(data-filter='.math')
            | Advanced
            ins &nbsp;

    .section.portfolio.works-container.row
        each p, key in page.parent
            if p['index.md'] && p['example.png']
                - var image = p['example.png'].filename
                - var url = p['index.md'].filename
                //- - var s = url.replace('')
                .work.mix(class='module')
                    img(src=image, alt=image)
                    //- .mask
                    a.mask(href=url)
                        div.name= key
                        div.author= p['index.md'].metadata.author

    script(src='/js/jquery-2.1.0.min.js')      
    script(src='/js/jquery.plugins.js')
    script(src='/js/custom.js')
